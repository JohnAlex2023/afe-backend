# ===================================
# SMTP Email Configuration
# ===================================
# Configuración del servidor SMTP para envío de notificaciones por email

# Servidor SMTP (ejemplos: smtp.gmail.com, smtp.office365.com, smtp.sendgrid.net)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Credenciales de autenticación
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password

# Email del remitente
SMTP_FROM_EMAIL=noreply@afe.com
SMTP_FROM_NAME=Sistema AFE Automatización

# Opciones de seguridad
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Configuración de reintentos
SMTP_MAX_RETRIES=3
SMTP_RETRY_DELAY=2

